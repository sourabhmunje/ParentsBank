<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Parents Bank Inc. </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .navbar-custom {
            color: #ffffff;
            font-size: 110%;
            color: #FFFFFF;
            background-color: #084588;
        }
    </style>
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top navbar-custom">
        <div class="container">
            <div class="navbar-header navbar-collapse">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Parent Bank", "Index", "Home", new { area = "" }, new { @class = "navbar-brand navbar-custom" })
            </div>
            <div class="navbar-collapse collapse navbar-custom">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Financial Resources", "About", "Home")</li>
                    @if (Request.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin") || User.IsInRole("Parent") || User.IsInRole("Child"))
                        {
                            <li>@Html.ActionLink("Account", "Index", "Accounts")</li>
                        }
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <ol class="breadcrumb">
        <li>@Html.ActionLink(ViewContext.RouteData.Values["controller"].ToString(), "index", "ViewContext.RouteData.Values[\"controller\"].ToString()", new { })</li>
        <li><a href="#">@Html.Label(ViewContext.RouteData.Values["action"].ToString(), ViewContext.RouteData.Values["action"].ToString(), ViewContext.RouteData.Values["action"].ToString())</a></li>
    </ol>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Parents Bank Inc. </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
